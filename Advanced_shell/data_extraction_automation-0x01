#!/bin/bash
# data_extraction_automation-0x01
# Extract Pikachu's name, height, weight, and type from data.json

name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize first letter
height=$(jq '.height' data.json | awk '{printf "%.1f", $1 / 10}')  # decimeters → meters
weight=$(jq '.weight' data.json | awk '{print $1 / 10}')           # hectograms → kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')     # capitalize

echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
