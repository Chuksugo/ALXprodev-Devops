#!/bin/bash
# apiAutomation-0x00
# Fetch Pikachu data from the PokÃ©mon API and save it to data.json
# If it fails, log the error to errors.txt

API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request with curl
curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$API_URL" | grep -q "^2" \
  || echo "[$(date)] Failed to fetch data from $API_URL" >> "$ERROR_FILE"
